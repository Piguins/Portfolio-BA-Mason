# ============================================
# Mason Portfolio API - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git (it's in .gitignore)

# ============================================
# Server Configuration
# ============================================
PORT=4000
NODE_ENV=development

# ============================================
# Database Configuration (Supabase PostgreSQL)
# ============================================
# Get this from Supabase Dashboard > Settings > Database > Connection String
# Use Connection Pooler (port 6543) for better performance
DATABASE_URL=postgresql://user:password@host:6543/database?sslmode=require

# ============================================
# Supabase Configuration
# ============================================
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# API Configuration
# ============================================
API_URL=http://localhost:4000

# ============================================
# Security Configuration
# ============================================
# Swagger UI Basic Auth (for /api-docs protection)
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=change-this-password

# CORS Allowed Origins (comma-separated, no spaces)
# Example: https://admin.mason.id.vn,https://cms.mason.id.vn
CORS_ORIGINS=https://admin.mason.id.vn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Vercel Configuration (auto-set in Vercel)
# ============================================
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
